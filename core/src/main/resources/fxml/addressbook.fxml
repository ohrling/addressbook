<VBox fx:controller="gui.GuiController" prefHeight="600.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1">
    <SplitPane dividerPositions="0.2505567928730512, 0.7505567928730512" focusTraversable="true" prefHeight="-1.0" prefWidth="-1.0" VBox.vgrow="ALWAYS">
        <AnchorPane>
            <Label accessibleText="Search" alignment="CENTER" layoutY="14.0" minWidth="60.0" prefWidth="-1.0" style="&#10;" text="Sök" textAlignment="CENTER" wrapText="false">
                <font>
                    <Font size="18.0" fx:id="x1" />
                </font>
                <textFill>
                    <Color blue="0.624" green="0.624" red="0.624" fx:id="x2" />
                </textFill>
            </Label>
            <Group fx:id="searchForm" layoutX="14.0" layoutY="50.0">
                <TextField fx:id="firstName" accessibleText="Firstname" promptText="Förnamn" />
                <TextField fx:id="lastName" accessibleText="Lastname" layoutY="38.0" promptText="Efternamn" />
                <TextField fx:id="email" accessibleText="E-mail" layoutY="76.0" promptText="E-mail" />
                <TextField fx:id="phoneNr" accessibleText="Phonenumber" layoutY="113.0" promptText="Telefonnummer" />
                <TextField fx:id="company" accessibleText="Company" layoutY="150.0" promptText="Företag" />
                <Button fx:id="searchBtn" accessibleText="Search for posts" defaultButton="true" layoutX="113.0" layoutY="190.0" mnemonicParsing="false" text="Sök" onAction="#handleSearch" />
            </Group>
        </AnchorPane>
        <ScrollPane prefHeight="-1.0" prefWidth="-1.0">
            <AnchorPane id="Content" minHeight="-1.0" minWidth="-1.0" prefHeight="545.0" prefWidth="430.0">
                <Label accessibleText="Addressbook" alignment="CENTER" font="$x1" layoutX="8.0" layoutY="14.0" style="&#10;" text="Adressbok" textAlignment="CENTER" textFill="$x2" wrapText="false" />
                <ListView fx:id="addressBookListView" layoutX="9.0" layoutY="50.0" prefHeight="494.0" prefWidth="417.0" />
            </AnchorPane>
        </ScrollPane>
        <AnchorPane>
            <Label accessibleText="More information" alignment="CENTER" font="$x1" layoutX="12.0" layoutY="14.0" style="&#10;" text="Mer info" textAlignment="CENTER" textFill="$x2" wrapText="false" />
            <TextArea fx:id="moreInfoTextArea" layoutX="10.0" layoutY="50.0" prefHeight="336.0" prefWidth="200.0" />
            <Button fx:id="editPostBtn" accessibleText="Edit post" layoutX="95.0" layoutY="512.0" mnemonicParsing="false" text="Ändra" textAlignment="CENTER" />
            <Button fx:id="deletePostBtn" accessibleText="Remove post" layoutX="158.0" layoutY="512.0" mnemonicParsing="false" text="Ta bort" textAlignment="CENTER" textFill="#fc0000" />

        </AnchorPane>
    </SplitPane>
    <HBox id="HBox" alignment="CENTER_LEFT" spacing="5.0" VBox.vgrow="NEVER">
        <Label fx:id="leftLabel" maxHeight="1.7976931348623157E308" maxWidth="-1.0" text="Left status" visible="false" HBox.hgrow="ALWAYS">
            <font>
                <Font size="11.0" fx:id="x3" />
            </font>
            <textFill>
                <Color blue="0.625" green="0.625" red="0.625" fx:id="x4" />
            </textFill>
        </Label>
        <Pane prefHeight="-1.0" prefWidth="-1.0" HBox.hgrow="ALWAYS" />
        <Label fx:id="rightLabel" font="$x3" maxWidth="-1.0" text="Right status" textFill="$x4" visible="false" HBox.hgrow="NEVER" />
        <padding>
            <Insets bottom="3.0" left="3.0" right="3.0" top="3.0" />
        </padding>
    </HBox>
</VBox>
